<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <!-- Regenerate S-box at build (optional) -->
  <Target Name="RegenerateSbox" BeforeTargets="CoreCompile">
    <Exec Command="dotnet run --project $(MSBuildThisFileDirectory)..\SboxGenerator\SboxGenerator.csproj -- $(MSBuildThisFileDirectory).."
          WorkingDirectory="$(MSBuildThisFileDirectory)" IgnoreExitCode="true" />
  </Target>
</Project>
